{
  "name": "butane-combobox",
  "version": "1.0.0-4",
  "description": "An accessible combobox/autocomplete library",
  "main": "dist/butane-combobox.cjs.js",
  "module": "dist/butane-combobox.esm.js",
  "browser": "dist/butane-combobox.umd.js",
  "scripts": {
    "build": "rollup -c && npm run cp:demo",
    "dev": "rollup -c -w",
    "test": "jest",
    "test:watch": "jest --watch ./src/**/*.js",
    "cp:css": "cp src/index.css demo/_includes/butane-combobox.css",
    "cp:js": "cp dist/butane-combobox.umd.js demo/_includes/butane-combobox.js",
    "cp:demo": "npm run cp:css && npm run cp:js"
  },
  "author": "alexcarpenter",
  "license": "MIT",
  "devDependencies": {
    "@testing-library/dom": "^6.7.1",
    "@testing-library/jest-dom": "^4.1.2",
    "jest": "^24.9.0",
    "rollup": "^1.23.1",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0"
  },
  "dependencies": {
    "match-sorter": "^4.0.2"
  },
  "files": [
    "dist"
  ]
}
